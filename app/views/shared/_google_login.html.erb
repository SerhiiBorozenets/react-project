<%- if devise_mapping.omniauthable? %>
  <div class="or-container"><div class="line-separator"></div> <div class="or-label">or login with</div><div class="line-separator"></div></div>
  <div class="d-flex justify-content-around mt-3">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <% if provider.to_s == "google_oauth2" %>
        <div>
          <%= form_for "Google_login",
                       url: omniauth_authorize_path(resource_name, provider),
                       method: :post, class: "btn btn-lg btn-logo btn-block text-uppercase btn-outline",
                       data: {turbo: "false"} do |f| %>
            <%= f.submit "Google_login", type: "image", src: url_for("/assets/google-logo.png") %>
          <% end %>
        </div>
      <% end %>
      <% if provider.to_s == "github" %>
        <div>
          <%= form_for "Github_login",
                       url: omniauth_authorize_path(resource_name, provider),
                       method: :post, class: "btn btn-lg btn-logo btn-block text-uppercase btn-outline",
                       data: {turbo: "false"} do |f| %>
            <%= f.submit "Github_login", type: "image", size: 16, src: url_for("/assets/GitHub-Mark-32px.png") %>
          <% end %>
        </div>
      <% end %>
      <% if provider.to_s == "facebook" %>
        <div>
          <%= form_for "Facebook",
                       url: omniauth_authorize_path(resource_name, provider),
                       method: :post, class: "btn btn-lg btn-logo btn-block text-uppercase btn-outline",
                       data: {turbo: "false"} do |f| %>
            <%= f.submit "Facebook", type: "image", size: 16, src: url_for("/assets/social_facebook_box_blue_256_30649.png") %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
